{
	"name": "@a-luna/svelte-base64",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/a-luna/svelte-mono.git",
		"directory": "apps/svelte-base64"
	},
	"type": "module",
	"scripts": {
		"dev": "vite --host --port 3500",
		"build": "svelte-kit sync && vite build",
		"build:ci": "npx playwright install && vite build && vitest run",
		"build:prod": "svelte-kit sync && vite build --mode prod",
		"start": "vite preview",
		"preview": "vite preview --host --port 4500",
		"sync": "svelte-kit sync",
		"sync:up": "pnpm --filter @a-luna/svelte-base64 update && svelte-kit sync && pnpm-lock-export && npm i --package-lock-only && find . -name '.DS_Store' -type f -delete",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run --coverage",
		"test:ui": "vitest watch --ui --coverage",
		"test:watch": "vitest watch --coverage",
		"svelte:check": "svelte-check --fail-on-warnings",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --write ./src/**/*.{js,svelte,html,ts}",
		"prelint": "npm run format",
		"lint": "eslint './src/**/*.{js,ts,svelte}'",
		"lint:fix": "eslint --fix './src/**/*.{js,ts,svelte}'"
	},
	"dependencies": {
		"@a-luna/shared-ui": "workspace:*",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@xstate/svelte": "^2.1.0",
		"cssnano": "^5.1.15",
		"highlight.js": "^11.11.1",
		"svelte": "^4.2.19",
		"vite": "^5.4.18",
		"vitest": "^1.6.1",
		"xstate": "^4.38.3",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@playwright/test": "^1.51.1",
		"@testing-library/dom": "^8.20.1",
		"@testing-library/jest-dom": "^5.17.0",
		"@testing-library/svelte": "^4.2.3",
		"@testing-library/user-event": "^14.6.1",
		"@tsconfig/svelte": "^3.0.0",
		"@types/node": "^18.19.86",
		"@types/testing-library__jest-dom": "^5.14.9",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vitest/coverage-v8": "^0.33.0",
		"@vitest/ui": "^1.6.1",
		"@xstate/cli": "^0.4.2",
		"autoprefixer": "^10.4.21",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-svelte": "^2.46.1",
		"jsdom": "^21.1.2",
		"playwright": "^1.51.1",
		"postcss": "^8.5.3",
		"postcss-html": "^1.8.0",
		"postcss-load-config": "^4.0.2",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte-check": "^3.8.6",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3"
	}
}
