{
	"name": "@a-luna/portfolio",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/a-luna/svelte-mono.git",
		"directory": "apps/portfolio"
	},
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite --host --port 3504 --force",
		"build": "svelte-kit sync && vite build",
		"build:prod": "svelte-kit sync && vite build --mode prod",
		"preview": "vite preview --host --port 4504",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --plugin-search-dir . --write .",
		"sync": "svelte-kit sync && find . -name '.DS_Store' -type f -delete"
	},
	"dependencies": {
		"@a-luna/shared-ui": "workspace:*",
		"@giscus/svelte": "^2.3.0",
