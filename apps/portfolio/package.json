		"date-fns": "^2.30.0",
		"gray-matter": "^4.0.3",
		"highlight.js": "^11.8.0",
		"imagetools-core": "^3.3.1",
		"js-base64": "^3.7.5",
		"mdsvex": "^0.10.6",
		"node-fetch": "2.6.7",
		"postcss": "^8.4.27",
