		"rehype-parse": "^8.0.4",
		"rehype-raw": "^6.1.1",
		"rehype-slug": "^5.1.0",
		"rehype-stringify": "^9.0.3",
		"remark-abbr": "^1.4.1",
		"remark-frontmatter": "^4.0.1",
		"remark-gfm": "^3.0.1",
		"remark-github": "^11.2.4",
		"remark-parse": "^10.0.2",
