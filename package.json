{
	"name": "@a-luna/svelte-mono",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/a-luna/svelte-mono.git"
	},
	"engines": {
		"node": "^19.0.0"
	},
	"scripts": {
		"build": "turbo run build",
		"check": "turbo run check",
		"build:all": "npm run build:ui && npm run build:site && npm run build:base64",
		"build:site": "npm run build --workspace=apps/portfolio",
		"build:base64": "npm run build --workspace=apps/svelte-base64-ts",
		"build:ui": "npm run build --workspace=packages/shared-ui",
		"dev:site": "npm run dev --workspace=apps/portfolio",
		"dev:base64": "npm run dev --workspace=apps/svelte-base64-ts",
		"format": "prettier --plugin-search-dir . --write .",
		"lint": "turbo run lint"
	},
	"dependencies": {
		"svelte": "^3.57.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0"
	},
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/shared-ui",
		"packages/svelte-color-tools",
		"packages/eslint-config-custon",
		"apps/portfolio",
		"apps/svelte-base64-ts"
	]
}
